<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/border_hampos">

    <TextView
        android:id="@+id/hampoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewLista" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewLista"
        app:layout_constraintEnd_toEndOf="@+id/cardViewLista"
        app:layout_constraintStart_toStartOf="@+id/cardViewLista"
        app:layout_constraintTop_toTopOf="@+id/cardViewLista" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLista"
        android:layout_width="144dp"
        android:layout_height="144dp"
        app:cardCornerRadius="150dp"
        app:layout_constraintBottom_toTopOf="@+id/hampoNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hampoFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:contentDescription="fotografÃ­a"
            android:cropToPadding="false"
            android:src="@drawable/ic_menu_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="____________________"
        app:layout_constraintBottom_toBottomOf="@+id/hampoNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewNotificacion"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>